<Window x:Class="VacationHR.DirectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VacationHR"
        mc:Ignorable="d"
        Title="DirectorWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Label Content="Заявки на отпуск"/>
            <DataGrid x:Name="vacationRequestsTable" AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Имя"/>
                    <DataGridTextColumn Header="Отчество"/>
                    <DataGridTextColumn Header="Фамилия"/>
                    <DataGridTextColumn Header="Начало"/>
                    <DataGridTextColumn Header="Конец"/>
                    <DataGridTextColumn Header="Причина"/>
                    <DataGridComboBoxColumn Header="Статус"/>
                    <DataGridTextColumn Header="Заполнено"/>
                    <DataGridTextColumn Header="Комментарий"/>
                </DataGrid.Columns>
                
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
